{
    "compilerOptions": {
        "target": "ES6",
        "lib": ["es6", "es7", "dom", "dom.iterable", "esnext"],
        "baseUrl": ".",
        "outDir": "build/dist",
        "module": "esnext",
        "sourceMap": true,
        "allowJs": false,
        "jsx": "react",
        "moduleResolution": "node",
        "rootDir": "src",
        "forceConsistentCasingInFileNames": true,
        "noImplicitReturns": true,
        "noImplicitThis": false,
        "noImplicitAny": false, // TODO change to true
        "importHelpers": true,
        "strictNullChecks": true,
        "suppressImplicitAnyIndexErrors": true,
        "noUnusedLocals": true,
        "allowSyntheticDefaultImports": true,
        "noEmitOnError": false // TODO change to true
    },
    "exclude": [
        "node_modules",
        "build",
        "scripts",
        "acceptance-tests",
        "webpack",
        "jest",
        "src/setupTests.ts",
        "babel.config.js",
        "coverage"
    ]
}
